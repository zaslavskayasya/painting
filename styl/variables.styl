dark-color = #272727;
light-color = #EEEEEE; 
mainPage-color = #F8FDFF;
accent-color = #F5A74B;


base-flex =
	display: flex
	justify-content: space-between
	align-items: center


container-max = 1125px;

transition = 
	transition: all ease 0.3s


.long_text_cut
	margin: 0; /* Убираем внешний отступ */
	-webkit-line-clamp: 6; /* Число отображаемых строк */
	display: -webkit-box; /* Включаем флексбоксы */
	-webkit-box-orient: vertical; /* Вертикальная ориентация */
	overflow: hidden; /* Обрезаем всё за пределами блока */
.middle_text_cut
	margin: 0; /* Убираем внешний отступ */
	-webkit-line-clamp: 4; /* Число отображаемых строк */
	display: -webkit-box; /* Включаем флексбоксы */
	-webkit-box-orient: vertical; /* Вертикальная ориентация */
	overflow: hidden; /* Обрезаем всё за пределами блока */


.block-padding
	padding: 70px 0px;


////////// HEADERS AND TEXTS ////////

.medium_text
	font-style: normal;
	font-weight: 500;
	font-size: 20px;
	line-height: 23px;
	color: dark-color;

.normal_text
	font-style: normal;
	font-weight: 400;
	font-size: 16px;
	line-height: 20px;
	color: dark-color;

.bold_text
	font-style: normal;
	font-weight: 700;
	font-size: 16px;
	line-height: 20px;
	color: dark-color;

.bold_heading
	font-weight: 700
	font-size: 30px

.h1
	font-style: normal;
	font-weight: normal;
	font-size: 48px;
	line-height: 35px;
	display: flex;
	align-items: center;
	color: dark-color;
	position: relative	
	&:before
		content: ""
		display block
		width: 7px;
		height: 42.5px;
		background-image: url("../img/decor_elems/h_decor.svg");
		position: absolute
		left: -15px
		bottom: -2px;

.h2
	font-style: normal;
	font-weight: 200;
	font-size: 51px;
	line-height: 35px;
	display: flex;
	align-items: center;
	color: dark-color;
	position: relative;
	padding-left: 20px;	
	&:before
		content: ""
		display block
		width: 7px;
		height: 42.5px;
		background-image: url("../img/decor_elems/h_decor.svg");
		position: absolute
		left: 2px;
		bottom: -5px;


//// BUTTONS ////
 
.btn
	border: 1px solid dark-color
	border-radius: 0px
	padding: 11px 74px;
	transition: all ease-in-out 0.3s
	&_standart
		padding: 11px 74px;
		background-color: mainPage-color
		color: dark-color
		&:hover
			background-color: dark-color
			color: mainPage-color
	&_dark
		display: flex
		background-color: dark-color
		color: mainPage-color
		align-items: center
		padding: 11px 42px;
		&:hover
			background-color: mainPage-color
			color: dark-color
			.cart-icon
				background:  no-repeat url("../img/icons/cart_black.svg") ;
		.cart-icon
			background:  no-repeat url("../img/icons/cart_white.svg") ;
			width: 30px;
			height: 23px;
			display: block;
	&_empty
		padding: 11px 74px
		background: transparent 
		color: light-color
		border: 1px solid light-color
		&:hover
			background: light-color
			color: dark-color



		

flex-base =
	display: flex;
	flex-flow: wrap;
	flex-direction: row

